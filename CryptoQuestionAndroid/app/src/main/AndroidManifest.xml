<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cryptoquestion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.cryptoquestion.InformacoesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.cryptoquestion.InformacoesUsuario"
            android:label="@string/title_activity_informacoes_usuario"
            android:parentActivityName="com.example.cryptoquestion.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cryptoquestion.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.cryptoquestion.Questionar"
            android:label="@string/title_activity_questionar"
            android:parentActivityName="com.example.cryptoquestion.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cryptoquestion.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.cryptoquestion.HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName="com.example.cryptoquestion.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cryptoquestion.LoginActivity" />
        </activity>
        <activity
            android:name=".EntrarCadastrarActivity"
            android:label="@string/title_activity_entrar_cadastrar"
            android:parentActivityName="com.example.cryptoquestion.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cryptoquestion.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cryptoquestion.CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:parentActivityName="com.example.cryptoquestion.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cryptoquestion.LoginActivity" />
        </activity>
        <activity
            android:name="com.example.cryptoquestion.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.example.cryptoquestion.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cryptoquestion.MainActivity" />
        </activity>
        <activity android:name="com.example.cryptoquestion.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>